<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question"
        android:layout_marginTop="30dp"
        android:text="@string/question"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        app:layout_constraintBottom_toTopOf="@+id/helping"
        app:layout_constraintRight_toRightOf="@+id/helping"
        android:layout_marginRight="15dp"
        android:text="@string/score"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resp1"
        android:text="@string/rep1"
        app:layout_constraintTop_toBottomOf="@+id/question"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resp2"
        android:text="@string/rep2"
        app:layout_constraintTop_toBottomOf="@id/resp1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resp3"
        android:text="@string/rep3"
        app:layout_constraintTop_toBottomOf="@id/resp2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resp4"
        android:text="@string/rep4"
        app:layout_constraintTop_toBottomOf="@id/resp3"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@raw/cat"
        android:id="@+id/cat"
        app:layout_constraintRight_toLeftOf="@id/helping"
        app:layout_constraintBottom_toTopOf="@id/helping"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flingCat"
        android:src="@raw/cat_fly_neutral"
        android:visibility="invisible"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/helping"
        android:text="@string/help"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@raw/fish"
        android:id="@+id/fish"
        android:layout_marginTop="25dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fishcount"
        android:layout_marginTop="8dp"
        android:text="@string/fishcount"
        app:layout_constraintTop_toTopOf="@id/fish"
        app:layout_constraintRight_toLeftOf="@id/fish" />



</android.support.constraint.ConstraintLayout>